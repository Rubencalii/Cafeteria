{
  "name": "cafe-aroma-backend",
  "version": "1.0.0",
  "description": "Backend para el restaurante Café Aroma con Node.js, Express y SQLite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node database/init.js",
    "setup": "npm install && node database/init.js",
    "production": "NODE_ENV=production node server-production.js",
    "test": "node tests/basic-tests.js",
    "test:api": "echo 'API tests coming soon'",
    "test:db": "echo 'Database tests coming soon'",
    "logs": "tail -f logs/app-$(date +%Y-%m-%d).log",
    "clean-logs": "find logs -name '*.log' -mtime +30 -delete"
  },
  "keywords": [
    "restaurant",
    "cafe",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "Café Aroma",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
