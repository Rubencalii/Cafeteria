# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN - CAFÉ AROMA
# ==========================================
# Copia este archivo a .env y configura tus valores reales

# Configuración del servidor
NODE_ENV=production
PORT=3000
HOST=localhost

# Configuración de la base de datos
DB_PATH=./database/cafe_aroma.db

# Configuración de autenticación
JWT_SECRET=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# ==========================================
# CONFIGURACIÓN DE EMAIL (Elige una opción)
# ==========================================

# OPCIÓN 1: Gmail (Recomendado para inicio)
EMAIL_SERVICE=gmail
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-contraseña-de-aplicación
EMAIL_FROM_NAME=Café Aroma
EMAIL_FROM_ADDRESS=tu-email@gmail.com

# OPCIÓN 2: SendGrid (Recomendado para producción)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=tu_api_key_de_sendgrid
# EMAIL_FROM_NAME=Café Aroma
# EMAIL_FROM_ADDRESS=noreply@cafearoma.com

# OPCIÓN 3: Outlook/Hotmail
# EMAIL_SERVICE=outlook
# EMAIL_USER=tu-email@hotmail.com
# EMAIL_PASSWORD=tu-contraseña
# EMAIL_FROM_NAME=Café Aroma
# EMAIL_FROM_ADDRESS=tu-email@hotmail.com

# ==========================================
# CONFIGURACIÓN DEL RESTAURANTE
# ==========================================
RESTAURANT_NAME=Café Aroma
RESTAURANT_ADDRESS=Av. Principal 123, Centro Histórico
RESTAURANT_PHONE=+34 900 123 456
RESTAURANT_EMAIL=info@cafearoma.com
RESTAURANT_WEBSITE=https://cafearoma.com

# Configuración de reservas
MAX_GUESTS_PER_RESERVATION=12
RESERVATION_HOURS_START=08:00
RESERVATION_HOURS_END=23:00
ADVANCE_BOOKING_DAYS=30

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://tu-dominio.com

